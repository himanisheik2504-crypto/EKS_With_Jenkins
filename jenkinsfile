pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_DEFAULT_REGION = 'us-east-2'
    }
 
    stages {
 
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/himanisheik2504-crypto/EKS_With_Jenkins.git']])
            }
        }
        
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
 
        stage('Validate Terraform') {
            steps {
                sh 'terraform validate'
            }
        }
 
        stage('Preview Infrastructure') {
            steps {
                script {
                    // Generate plan
                    sh 'terraform plan -out=tfplan'
                    // Ask for manual approval before apply
                    input(message: "Do you approve the Terraform plan?", ok: "Proceed")
                }
            }
        }
 
        stage('Apply Infrastructure') {
            steps {
                script {
                    // Apply the previously created plan automatically
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
 
    post {
        always {
            echo "Pipeline finished"
        }
    }
}
 
